<Window x:Class="YukikaHub.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YukikaHub.UI"
        xmlns:controls="clr-namespace:YukikaHub.UI.UserControls" 
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:view="clr-namespace:YukikaHub.UI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="760" Width="1280"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        ResizeMode="NoResize">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <controls:TopBar x:Name="TopBar"
                         Grid.ColumnSpan="2"
                         Panel.ZIndex="1"
                         MouseLeftButtonDown="Window_MouseLeftButtonDown"/>
        <controls:BasicToolbar Grid.Column="1" Panel.ZIndex="2"/>

        <view:NavigationView Grid.Column="0"/>

        <UniformGrid Grid.Column="1"
                     Margin="0 70 0 0"
                     Columns="3"
                     VerticalAlignment="Top">
            <Image Source="Images/Lovemonth.jpg"
                   Width="200"/>
            <Image Source="Images/Lovemonth.jpg"
                   Width="200"/>
            <Image Source="Images/Soul Lady.jpg"
                   Width="200"/>
            <Image Source="Images/Soul Lady.jpg"
                   Width="200"/>
        </UniformGrid>
    </Grid>
</Window>