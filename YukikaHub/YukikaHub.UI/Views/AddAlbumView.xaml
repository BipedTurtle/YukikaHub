<UserControl x:Class="YukikaHub.UI.Views.AddAlbumView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YukikaHub.UI.Views"
             xmlns:styling="clr-namespace:YukikaHub.UI.Attached_Properties"
             mc:Ignorable="d" 
             d:DesignHeight="710" d:DesignWidth="1020">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label x:Name="ImagePlaceholder"
               Content="Image will show up here"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="24"
               Background="#FFCCE8F7"
               Margin="40" FontFamily="LEMON MILK"/>

        <StackPanel Grid.Column="1"
                    styling:MarginSetter.ChildMargin="0 10"
                    Name="InfoPanel">
            <Button Content="test"/>
            <Button Content="test"/>
            <Button Content="test"/>
            <Button Content="test"/>
        </StackPanel>
    </Grid>
</UserControl>