<UserControl x:Class="YukikaHub.UI.UserControls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YukikaHub.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Brush x:Key="TopBar_Brush">#f7527e</Brush>
        <Color x:Key="TopBar_Color">#f7527e</Color>
    </UserControl.Resources>

    <Grid>
        <Rectangle Grid.ColumnSpan="2"
                       Height="50"
                       Fill="{StaticResource TopBar_Brush}"
                       Panel.ZIndex="1"
                       VerticalAlignment="Top">
            <Rectangle.Effect>
                <DropShadowEffect BlurRadius="25"
                                      ShadowDepth="0"
                                      Color="{StaticResource TopBar_Color}"/>
            </Rectangle.Effect>
        </Rectangle>
    </Grid>
</UserControl>
