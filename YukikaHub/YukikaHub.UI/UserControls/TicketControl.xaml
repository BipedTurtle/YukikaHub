<UserControl x:Class="YukikaHub.UI.UserControls.TicketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YukikaHub.UI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="0 10"
          Background="White"
          Height="300">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <!--<Border CornerRadius="5"
                        Grid.Column="0">
            <Border.Background>
                <ImageBrush ImageSource="/Images/Soul Lady.jpg"
                            Stretch="UniformToFill"/>
            </Border.Background>
        </Border>-->
        <GroupBox Grid.Column="1"
                  Header="Seattle Concert"
                  Margin="2 0"
                  BorderThickness="0"
                  FontFamily="LEMON MILK Medium">
            <DockPanel Grid.Column="1">
                <DockPanel.Resources>
                    <Style TargetType="StackPanel">
                        <Setter Property="DockPanel.Dock" Value="Top"/>
                    </Style>
                </DockPanel.Resources>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Title:"/>
                    <Label Content="Seattle Concert"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Date:"/>
                    <Label Content="2/16/2021"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Price:"/>
                    <Label Content="$77"/>
                </StackPanel>
                <Grid VerticalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Description"
                           Margin="0 10 0 5"/>
                    <TextBox Grid.Row="1"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                </Grid>
            </DockPanel>
        </GroupBox>
    </Grid>
</UserControl>
