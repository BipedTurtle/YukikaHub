<Application x:Class="YukikaHub.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:YukikaHub.UI"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <md:CustomColorTheme BaseTheme="Light" PrimaryColor="#3B5998" SecondaryColor="#ADB9D3" />
                <ResourceDictionary Source="/UI Resources/ModernScroll.xaml"/>
                <ResourceDictionary Source="/Resources/DetailViewsResourceDictionary.xaml"/>
                <ResourceDictionary Source="/Resources/ValidationErrorsFormsResourceDictionary.xaml"/>
                <ResourceDictionary Source="/Resources/ConvertersResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
